extends base

block content

    main.col-md-9.ml-sm-auto.col-lg-10.px-md-4(role='main')
        section.content-body.content-body-modern.mt-0(role='main')
            // start: page
            .ecommerce-form-sidebar-overlay-wrapper
                .ecommerce-form-sidebar-overlay-body
                    a.ecommerce-form-sidebar-overlay-close(href='#')
                        i.bx.bx-x
                    .scrollable.h-100.loading-overlay-showing(data-plugin-scrollable='')
                        .loading-overlay
                            .bounce-loader
                                .bounce1
                                .bounce2
                                .bounce3
                        .ecommerce-form-sidebar-overlay-content.scrollable-content.px-3.pb-3.pt-1
            .row.justify-content-center.justify-content-sm-between(style='margin-bottom: 30px;')
                .col-sm-auto.text-center.mb-4.mb-sm-0.mt-2.mt-sm-0
                    a.btn.btn-primary.btn-md.font-weight-semibold(href='/dashboard') + Add Product
            .row.row-gutter-sm.mb-5
                .col-lg-3-5.col-xl-4-5
                    .row.row-gutter-sm
                        // PRODUCT
                        each product in products
                            .col-sm-6.col-xl-3.mb-4
                                .card.card-modern.card-modern-alt-padding
                                    .card-body.bg-light
                                        .image-frame.mb-2
                                            .image-frame-wrapper
                                                .image-frame-badges-wrapper
                                                    span.badge.badge-ecommerce.badge-danger=`${product.amountOff}% OFF`
                                                a(href=`/dashboard/products/update/${product.slug}`)
                                                    img.img-fluid(src=`${url}/${product.images[0]}` alt=`${product.title}`)
                                        //- small
                                        //-     a.ecommerce-sidebar-link.text-color-grey.text-color-hover-primary.text-decoration-none(href='index.html') CATEGORY
                                        h4.text-4.line-height-2.mt-0.mb-2
                                            a.ecommerce-sidebar-link.text-color-dark.text-color-hover-primary.text-decoration-none(href=`/dashboard/products/update/${product.slug}`)= product.title
                                        //- .stars-wrapper
                                        //-     i.fas.fa-star
                                        //-     i.fas.fa-star
                                        //-     i.fas.fa-star
                                        //-     i.fas.fa-star
                                        //-     i.fas.fa-star
                                        .product-price
                                            .regular-price.on-sale=`Regular: ${product.price}`
                                            .sale-price= `Sales: ${product.priceDiscount}`
                                        a.btn.btn-danger.btn-sm(href=`/dashboard/products/${product.slug}/delete`) Delete Product


                    - if(numOfPages > 1)
                        .row.row-gutter-sm.justify-content-between(style='margin-top: 30px;')
                            //- .col-lg-auto.order-2.order-lg-1
                            //-     p.text-center.text-lg-left.mb-0 Showing 1-8 of 60 results
                            .col-lg-auto.order-1.order-lg-2.mb-3.mb-lg-0
                                nav(aria-label='Page navigation example')
                                    ul.pagination.pagination-modern.pagination-modern-spacing.justify-content-center.justify-content-lg-start.mb-0
                                        li.page-item
                                            -if(currPage !== 1)
                                                a.page-link.prev(href=`?product=${query}&page=${currPage - 1}&limit=${pageLimit}` aria-label='Previous')
                                                    span
                                                        i.fas.fa-chevron-left(aria-label='Previous')
                                        li.page-item.active
                                            a.page-link(href='#') #{currPage}
                                        li.page-item
                                            - if(currPage < numOfPages)
                                                a.page-link.next(href=`?product=${query}&page=${currPage + 1}&limit=${pageLimit}` aria-label='Next')
                                                    span
                                                        i.fas.fa-chevron-right(aria-label='Next')

